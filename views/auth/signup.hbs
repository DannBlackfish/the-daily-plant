<h2 class="titlelogin2">JOIN US</h2>
<p class="subtitlesignup" >Make your own garden</p>

<div id="signup">
  <form action="/signup" method="POST" enctype="multipart/form-data">

    <div class="row mb-3">
      <label class="col-sm-1 col-form-label date" for="input-username"> Username </label>
      <div class="col-sm-5">
        <input class="form-control" type="text" name="username" placeholder="Your username"/>
      </div>
    </div>  

    <div class="row mb-3">
      <label class="col-sm-1 col-form-label date" for="input-email"> Email </label>
      <div class="col-sm-5">
        <input class="form-control" type="email" id="input-email" name="email" placeholder="Your email" />
      </div>
    </div>

    <div class="row mb-3">
      <label class="col-sm-1 col-form-label date" for="input-password"> Password </label>
      <div class="col-sm-5">
        <input class="form-control" type="password" name="password" id="input-password" placeholder="********" />
      </div>
    </div>


    <label class="date">Profile Image</label>
    <input type="file" name="imageProfile" />
 
    <button type="submit" class="btn btn-outline-light btn-update">Create account</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
