<h2 class="titlelogin">JOIN US</h2>
<p class="date">Make your own garden</p>

<div class="card" style="width: 18rem;">
  <form action="/signup" method="POST"></form>
    <div class="card-header">
      <label for="input-username"> Username </label>
      <input type="text" name="username" placeholder="Your username"/>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">    
        <label for="input-email"> Email </label>
        <input type="email" id="input-email" name="email" placeholder="Your email" />
      </li>
      <li class="list-group-item">
        <label for="input-password"> Password </label>
        <input type="password" name="password" id="input-password" placeholder="********" />
      </li>
      <li class="list-group-item">
        <button type="submit">Create account</button>
      </li>
    </ul>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>




